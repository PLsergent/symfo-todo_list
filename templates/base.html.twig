<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="icon" type="image/png" href="{{ asset('images/favicon.ico') }}">
        <title>{% block title %}TodoList{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="wrapper d-flex align-items-stretch">
            <nav id="sidebar" class="">
                <div class="custom-menu">
                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                </div>
                <div class="p-4">
                    <h1><a href="{{ path('home') }}" class="logo">TodoList</a></h1>
                    <ul class="list-unstyled components mb-5">
                        {% if app.user %}
                        <li>
                            <a href="{{ path('home') }}"><i class="fa fa-home mr-3"></i> {{ app.user }}</a>
                        </li>
                        {% else %}
                        <li>
                            <a href="{{ path('app_login') }}"><i class="fa fa-home mr-3"></i> Login</a>
                        </li>
                        {% endif %}
                        <li>
                            <a href="#"><i class="far fa-check-circle mr-3"></i> Todo</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-tasks mr-3"></i> Tasks</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-stream mr-3"></i> Categories</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-users mr-3"></i> Groups</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{ path('admin') }}"><i class="fas fa-users-cog mr-3"></i></i> Admin</a>
                        </li>
                        {% endif %}
                        {% if app.user %}
                        <li>
                            <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt mr-3"></i></i> Logout</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
                <div class="footer">
                    <p class="ml-1"><!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart" aria-hidden="true"></i> 
                        by <a href="https://colorlib.com" style="color: white" target="_blank">Colorlib.com</a>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </p>
                    <p class="ml-1">App by @Sergent Pierre-Louis</p>
                </div>
            </nav>

            <div id="content" class=" container p-4 p-md-5 pt-5">
                {% block body %}{% endblock %}
            </div>
        </div>
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/popper.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
